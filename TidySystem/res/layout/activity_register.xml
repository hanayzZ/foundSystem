<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@drawable/ico_back" />

        <!--
       <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/space_180"
            android:text="注册" />
        -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/icon_squire"
        android:orientation="vertical" >

        <!-- 用户名 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_iconUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/icon_user"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/space_10" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_iconUser"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/iv_iconUser"
                android:background="@null"
                android:gravity="bottom|left"
                android:hint="@string/inputUserName"
                android:padding="@dimen/space_5" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_1"
                android:layout_alignLeft="@+id/et_userName"
                android:layout_below="@+id/et_userName"
                android:background="@drawable/icon_line" />
        </RelativeLayout>
        <!-- 手机号 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_iconPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/icon_user"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/space_10" />

            <EditText
                android:id="@+id/et_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_iconPhone"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/iv_iconPhone"
                android:background="@null"
                android:gravity="bottom|left"
                android:hint="@string/inputPhone"
                android:padding="@dimen/space_5" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_1"
                android:layout_alignLeft="@+id/et_Phone"
                android:layout_below="@+id/et_Phone"
                android:background="@drawable/icon_line" />
        </RelativeLayout>
        <!-- 密码 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_iconPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/icon_password"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/space_10" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_iconPassword"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/iv_iconPassword"
                android:background="@null"
                android:hint="@string/inputPassword"
                android:padding="@dimen/space_5"
                android:password="true" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_1"
                android:layout_alignLeft="@+id/et_password"
                android:layout_below="@+id/et_password"
                android:background="@drawable/icon_line" />
        </RelativeLayout>
        <!-- 重复密码 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_3"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_iconrePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@drawable/icon_password"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/space_10" />

            <EditText
                android:id="@+id/et_repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_iconrePassword"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/iv_iconrePassword"
                android:background="@null"
                android:hint="@string/inputrePassword"
                android:padding="@dimen/space_5"
                android:password="true" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_1"
                android:layout_alignLeft="@+id/et_repassword"
                android:layout_below="@+id/et_repassword"
                android:background="@drawable/icon_line" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_login_btn"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>