    <style name="imgStyleTopicUserAvatar">
        <item name="android:layout_width">@dimen/space_45</item>
        <item name="android:layout_height">@dimen/space_45</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="topic_thread_bottom_textview_style">
        <item name="android:textSize">@dimen/space_11</item>
        <item name="android:paddingTop">@dimen/space_3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_5</item>
        <item name="android:text">0</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>